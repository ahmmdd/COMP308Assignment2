<!-- HEADER -->
<% include ../partials/header %>

<!-- -->
<div class="container">
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<h1><%= title %></h1>
			<form method="post">
				<div class="form-group">
					<label for="NameTextField">Name</label>
					<input type="text" 
					class="form-control" 
					id="NameTextField" 
					placeholder="Contact Name" 
					name="name"
					required 
					value="<%= contacts.name %>">
				</div>

				<div class="form-group">
					<label for="NumberTextField">Number</label>
					<input type="text" 
					class="form-control" 
					id="NumberTextField" 
					placeholder="Contact Number" 
					name="number"
					required
					value="<%= contacts.number %>">
				</div>

				<div class="form-group">
					<label for="EmailTextField">Email address</label>
					<input type="email" 
					class="form-control" 
					id="EmailTextField" 
					placeholder="Contact Email" 
					name="email"
					required
					value="<%= contacts.email %>">
				</div>
				<button type="submit" class="btn btn-default"><i class="fa fa-sign-in"></i> Submit</button>
				<a class="btn btn-primary" href="/contacts" role="button"><i class="fa fa-ban"></i> Cancel</a>
			</form>
		</div>
	</div>
</div>

